{
  "manifest_version": 3,
  "name": "IP Locator",
  "version": "1.0.0",
  "description": "自动检测网页上的IP地址并显示地理位置信息",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://ip-api.com/*",
    "https://ipapi.co/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "IP Locator"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
} 